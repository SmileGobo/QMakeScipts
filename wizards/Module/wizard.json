{
    "version": 1.0,
    "supportedProjectTypes": [ "Qt4ProjectManager.Qt4Project" ],
    "id": "D.ModuleGen",
    "category": "H.C++",
    "trDescription": {
        "C": "Creates a new Module in QmakeScripts Project.",
        "en_EN": "Creates a new Module in QmakeScripts Project.",
        "ru_RU": "Создает новый модуль в QmakeScripts проекте"
    },
    "trDisplayName": {
        "C": "New module",
        "en_EN": "New module",
        "ru_RU": "Новый модуль"
    },
    "trDisplayCategory": "QmakeScripts",
    "icon": "autotest.png",
    "featuresRequired": [  ],
    "enabled": true,

    "options":
    [
        { "key": "ProjectFilePath",
          "value": "%{JS: '%{BuildSystem}' == 'qmake' ? '%{ProFileName}' : ('%{BuildSystem}' == 'qbs' ? '%{QbsFileName}' : '%{CMakeFileName}') }"
        },
        { "key": "ProFileName",
          "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'pro')}"
        },
        {
          "key": "QbsFileName",
          "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'qbs')}"
        },
        {
          "key": "CMakeFileName",
          "value": "%{ProjectDirectory}/CMakeLists.txt"
        },
        { "key": "IsTopLevelProject",
           "value": "%{JS: !'%{Exists:ProjectExplorer.Profile.Ids}' }"
        },
        { "key": "MainCppName",
          "value": "%{JS: 'main.' + Util.preferredSuffix('text/x-c++src') }"
        },
        {
          "key": "TestCaseFileWithHeaderSuffix",
          "value": "%{JS: 'tst_%{TestCaseName}.'.toLowerCase() + Util.preferredSuffix('text/x-c++hdr') }"
        },
        {
          "key": "TestCaseFileWithCppSuffix",
          "value": "%{JS: 'tst_%{TestCaseName}.'.toLowerCase() + Util.preferredSuffix('text/x-c++src') }"
        }
    ],

    "pages":
    [
        {
            "trDisplayName": {
                "C": "Module details",
                "en_EN": "Module details",
                "ru_RU": "Настройки модуля" 
            },
            "trShortTitle": {
                "C": "Details",
                "en_EN": "Details",
                "ru_RU":"Настройки"
            },
            "typeId": "Fields",
            "data":
            [
                {
                    "name": "module_name",
                    "trDisplayName": "Module name:",
                    "type": "LineEdit",
                    "data": {
                        "validator": "^[a-zA-Z0-9]+$"        
                    }
                },
                {
                    "name": "test_enable",
                    "trDisplayName": "Enable tests",
                    "type": "CheckBox",
                    "data": {
                        "checked": true,
                        "checkedValue": "true",
                        "uncheckedValue": "false"        
                    }
                },
                {
                    "name": "test_type",
                    "trDisplayName": "Test type:",
                    "type": "ComboBox",
                    "data":
                    {
                        "index": 0,
                        "items": ["boost", "gtest"]
                    }
                }
            ]
        }
    ],
    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
                {
                    "source": "files/tst.pro",
                    "target": "%{ProjectFilePath}",
                    "condition": "%{JS: '%{BuildSystem}' == 'qmake'}",
                    "openInEditor": false,
                    "openAsProject": true
                },
                {
                    "source": "files/tst.qbs",
                    "target": "%{ProjectFilePath}",
                    "condition": "%{JS: '%{BuildSystem}' == 'qbs'}",
                    "openInEditor": false,
                    "openAsProject": true
                },
                {
                    "source": "files/tst.txt",
                    "target": "CMakeLists.txt",
                    "condition": "%{JS: '%{BuildSystem}' == 'cmake'}",
                    "openInEditor": false,
                    "openAsProject": true
                }
                
            ]
        }
    ]
}
