{
    "version": 1.0,
    "supportedProjectTypes": [ "Qt4ProjectManager.Qt4Project" ],
    "id": "D.ModuleGen",
    "category": "H.C++",
    "trDescription": {
        "C": "Creates a new Module in QmakeScripts Project.",
        "en_EN": "Creates a new Module in QmakeScripts Project.",
        "ru_RU": "Создает новый модуль в QmakeScripts проекте"
    },
    "trDisplayName": {
        "C": "New module",
        "en_EN": "New module",
        "ru_RU": "Новый модуль"
    },
    "trDisplayCategory": "QmakeScripts",
    "icon": "autotest.png",
    "featuresRequired": [  ],
    "enabled": true,

    "options":
    [
        { "key": "TargetPath", "value": "%{InitialPath}" },
        { "key": "ProjectFilePath",
          "value": "%{JS: '%{BuildSystem}' == 'qmake' ? '%{ProFileName}' : ('%{BuildSystem}' == 'qbs' ? '%{QbsFileName}' : '%{CMakeFileName}') }"
        },
        { "key": "ProFileName",
          "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'pro')}"
        },
        { "key": "IsTopLevelProject",
            "value": "%{JS: !'%{Exists:ProjectExplorer.Profile.Ids}' }"
        },
        { "key": "ProjectConfigFile",
          "value": "vars.pri"
        },
        {
            "key": "PathTo.ModuleRoot",
            "value": "%{InitialPath}/%{Module.Name}"
        },
        {
            "key": "PathTo.Module",
            "value": "%{PathTo.ModuleRoot}/Module"
        },
        {
            "key": "PathTo.UnitTest",
            "value": "%{InitialPath}/%{Module.Name}/%{Module.Name}"
        }
    ],

    "pages":
    [
        {
            "trDisplayName": {
                "C": "Module details",
                "en_EN": "Module details",
                "ru_RU": "Настройки модуля" 
            },
            "trShortTitle": {
                "C": "Details",
                "en_EN": "Details",
                "ru_RU":"Настройки"
            },
            "typeId": "Fields",
            "data":
            [
                {
                    "name": "Module.Name",
                    "trDisplayName": "Module name:",
                    "type": "LineEdit",
                    "data": {
                        "validator": "^[a-zA-Z0-9]+$"        
                    }
                },
                {
                    "name": "TestEnabled",
                    "trDisplayName": "Enable tests",
                    "type": "CheckBox",
                    "data": {
                        "checked": true,
                        "checkedValue": true,
                        "uncheckedValue": false       
                    }
                },
                {
                    "name": "TestType",
                    "trDisplayName": "Test type:",
                    "type": "ComboBox",
                    "data":
                    {
                        "index": 0,
                        "items": ["boost", "gtest"]
                    },
                    "enabled": "%{TestEnabled}"
                },
                {
                    "name": "ModulesRoot",
                    "trDisplayName": "Modules root dir",
                    "enabled": false,
                    "type": "PathChooser",
                    "data": {
                        "path": "%{InitialPath}"
                    }
                }
            ]
        },
        {
            "trDisplayName": {
                "C": "Configs",
                "en_EN": "Module details",
                "ru_RU": "Пути к файлам конфигурации" 
            },
            "trShortTitle": {
                "C": "Configs Path",
                "en_EN": "Configs Path",
                "ru_RU":"Конфигурации"
            },
            "typeId": "Fields",
            "data": [
                {
                    "name": "PathTo.ProjectConfig",
                    "trDisplayName": "Project config:",
                    "type": "PathChooser",
                    "data": {
                        "path": "%{InitialPath}/%{ProjectConfigFile}",
                        "kind": "file"
                    }
                },
                {
                    "name": "ModuleConfigDir",
                    "trDisplayName": "Module config dir:",
                    "type": "PathChooser",
                    "data": {
                        "path": "%{InitialPath}/%{Module.Name}",
                        "kind": "directory"
                    }
                },
                {
                    "name": "Module.ConfigFile",
                    "trDisplayName": "Module config file",
                    "type": "LineEdit",
                    "data": {
                        "trText": "mconfig.pri"
                    }
                }
            ]
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],
    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
                {
                    "source": "files/Module.pro",
                    "target": "%{Module.Name}/Module/Module.pro",
                    "openInEditor": false,
                    "openAsProject": false
                },
                {
                    "source": "files/TopModule.pro",
                    "target": "%{Module.Name}/%{Module.Name}.pro",
                    "openInEditor": false,
                    "openAsProject":false
                },
                {
                    "source": "files/%{Module.ConfigFile}",
                    "target": "%{Module.Name}/%{Module.ConfigFile}",
                    "openInEditor":false,
                    "openAsProject":false
                }, 
                {
                    "source": "files/Test.pro",
                    "target": "%{Module.Name}/%{Module.Name}/%{Module.Name}.pro",
                    "openInEditor": false,
                    "openAsProject": false,
                    "condition": "%{TestEnabled}"
                },
                {
                    "source": "files/boost_main.cpp",
                    "target": "%{Module.Name}/%{Module.Name}/src/main.cpp",
                    "openInEditor":true,
                    "openAsProject":false
                }
            ]
        }
    ]
}
