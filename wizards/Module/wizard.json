{
    "version": 1.0,
    "supportedProjectTypes": [ "Qt4ProjectManager.Qt4Project" ],
    "id": "D.ModuleGen",
    "category": "H.C++",
    "trDescription": {
        "C": "Creates a new Module in QmakeScripts Project.",
        "en_EN": "Creates a new Module in QmakeScripts Project.",
        "ru_RU": "Создает новый модуль в QmakeScripts проекте"
    },
    "trDisplayName": {
        "C": "New module",
        "en_EN": "New module",
        "ru_RU": "Новый модуль"
    },
    "trDisplayCategory": "QmakeScripts",
    "icon": "autotest.png",
    "featuresRequired": [  ],
    "enabled": true,

    "options":
    [
        { "key": "TargetPath", "value": "%{InitialPath}" },
        { "key": "ProjectFilePath",
          "value": "%{JS: '%{BuildSystem}' == 'qmake' ? '%{ProFileName}' : ('%{BuildSystem}' == 'qbs' ? '%{QbsFileName}' : '%{CMakeFileName}') }"
        },
        { "key": "ProFileName",
          "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'pro')}"
        },
        { "key": "IsTopLevelProject",
            "value": "%{JS: !'%{Exists:ProjectExplorer.Profile.Ids}' }"
        },
        { "key": "DefineFile",
          "value": "../../vars.pri"
        }
    ],

    "pages":
    [
        {
            "trDisplayName": {
                "C": "Module details",
                "en_EN": "Module details",
                "ru_RU": "Настройки модуля" 
            },
            "trShortTitle": {
                "C": "Details",
                "en_EN": "Details",
                "ru_RU":"Настройки"
            },
            "typeId": "Fields",
            "data":
            [
                {
                    "name": "ModuleName",
                    "trDisplayName": "Module name:",
                    "type": "LineEdit",
                    "data": {
                        "validator": "^[a-zA-Z0-9]+$"        
                    }
                },
                {
                    "name": "TestEnabled",
                    "trDisplayName": "Enable tests",
                    "type": "CheckBox",
                    "data": {
                        "checked": true,
                        "checkedValue": "true",
                        "uncheckedValue": "false"        
                    }
                },
                {
                    "name": "TestType",
                    "trDisplayName": "Test type:",
                    "type": "ComboBox",
                    "data":
                    {
                        "index": 0,
                        "items": ["boost", "gtest"]
                    },
                    "enabled": "%{JS: '%TestEnabled' === true}"
                }
            ]
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],
    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
                {
                    "source": "files/Module.pro",
                    "target": "%{ModuleName}/Module/Module.pro",
                    "openInEditor": false,
                    "openAsProject": false
                },
                {
                    "source": "files/Test.pro",
                    "target": "%{ModuleName}/%{ModuleName}/%{ModuleName}.pro",
                    "openInEditor": false,
                    "openAsProject": false
                },
                {
                    "source": "files/TopModule.pro",
                    "target": "%{ModuleName}/%{ModuleName}.pro",
                    "openInEditor": false,
                    "openAsProject":false
                },
                {
                    "source": "files/config.pri",
                    "target": "%{ModuleName}/config.pri",
                    "openInEditor":false,
                    "openAsProject":false
                },
                {
                    "source": "files/boost_main.cpp",
                    "target": "%{ModuleName}/%{ModuleName}/src/main.cpp",
                    "openInEditor":true,
                    "openAsProject":false
                }

            ]
        }
    ]
}
